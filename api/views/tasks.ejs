<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks</title>
    <link rel="stylesheet" href="/styles.css">
    <script>
        async function changeStatus(taskId, newStatus) {
            const response = await fetch(`/tasks/status/${taskId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${document.cookie.split('=')[1]}`
                },
                body: JSON.stringify({ status: newStatus })
            });
            if (response.ok) {
                alert(`Task status changed to ${newStatus}`);
                location.reload();
            } else {
                alert('Error changing task status');
            }
        }

        function viewTask(taskId) {
            window.location.href = `/tasks/view/${taskId}`;
        }
    </script>
</head>
<body>
    <header>
        <div class="container">
            <div id="branding">
                <h1>Task Manager</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/tasks">Tasks</a></li>
                    <li><a href="/create-task">Create Task</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <h1>Tasks</h1>
        <button onclick="window.location.href='/create-task'">Create Task</button>
        <% if (tasks && tasks.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>to do</th>
                        <th>In Progress</th>
                        <th>Done</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <% tasks.filter(task => task.status === 'to do').forEach(task => { %>
                                <div onclick="viewTask('<%= task._id %>')"><%= task.title %></div>
                            <% }) %>
                        </td>
                        <td>
                            <% tasks.filter(task => task.status === 'in progress').forEach(task => { %>
                                <div onclick="viewTask('<%= task._id %>')"><%= task.title %></div>
                            <% }) %>
                        </td>
                        <td>
                            <% tasks.filter(task => task.status === 'done').forEach(task => { %>
                                <div onclick="viewTask('<%= task._id %>')"><%= task.title %></div>
                            <% }) %>
                        </td>
                    </tr>
                </tbody>
            </table>
        <% } else { %>
            <p>No tasks found.</p>
        <% } %>
    </div>
</body>
</html>